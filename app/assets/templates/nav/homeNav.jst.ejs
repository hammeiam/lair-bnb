<ul>
  <li class="left-nav"><a href="/#search/"><span class="logo-white"></span></a></li>
  
	<div class="right-nav-container">
		<% if(!!currentUser){ %>
			<li class="profile">
				<a href="#/users/<%= currentUser.id %>">
					<div class="circle">
						<img src="<%= currentUser.escape(['profile_image_url']) %>" class="profile-img"/>
					</div>
					<span><%= currentUser.escape(['first_name']) %></span>
				</a>
			</li>
			<li>
				<a href="javascript:void(0)" id="signOut">Log Out</a>
			</li>
		<% } else { %>
			<li title="Try Signing In with the guest account first" data-toggle="tooltip" data-placement="bottom">
				<a href="#signUpModal" data-toggle="modal">Sign Up</a>
			</li>
			<li title="Use the guest account when signing in" data-toggle="tooltip" data-placement="bottom">
				<a href="#signInModal" data-toggle="modal" >Sign In</a>
			</li>
		<% } %>
	</div>
</ul>

<!-- Modals -->
<!-- Sign In -->
<div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
    <div id="sign-in-alerts-container-modal"></div>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign In</h4>
      </div>
      <form id="signIn" role="form">
	      <div class="modal-body">
	       	<div class="form-group">
	       	  <label for='signInEmail'>Email</label>
					  <input id='signInEmail' class="form-control" type='text' name='session[email]' placeholder="Enter email">
				  </div>
				  
				  <div class="form-group">
					  <label for='signInPassword'>Password</label>
					  <input id='signInPassword' class="form-control" type='password' name='session[password]' placeholder="Password">
				  </div>
	       
	      </div>
	      <div class="modal-footer">
	      	<button type="button" class="btn btn-default" id="guest-signin">Use Guest Account</button>
	        <button type="submit" class="btn btn-default">Sign In</button>
	      </div>
      </form>
    </div>
  </div>
</div>

<!-- Sign Up -->
<div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
    <div id="sign-up-alerts-container-modal"></div>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign In</h4>
      </div>
      <form id="signUp" role="form">
	      <div class="modal-body">
	       	<div class="form-group">
	       	  <label for='signUpFirstName'>First Name</label>
					  <input id='signUpFirstName' type='text' class="form-control" name='user[first_name]'>
				  </div>
				  <div class="form-group">
					  <label for='signUpLastName'>Last Name</label>
					  <input id='signUpLastName' type='text' class="form-control" name='user[last_name]'>
				  </div>
					<div class="form-group">
					  <label for='signUpEmail'>Email</label>
					  <input id='signUpEmail' type='text' class="form-control" name='user[email]'>
					</div>
					<div class="form-group">
					  <label for='signUpPassword'>Password</label>
					  <input id='signUpPassword' type='password' class="form-control" name='user[password]'>
					</div>
					<div class="form-group">
					  <label for='signUpImages'>Profile Image</label>
					  <input type="filepicker" 
					    id="signUpImages"
					    class="form-control"
					    data-fp-class="btn blue"
					    name="user[image_url]">
					    <script type="text/javascript">
					    filepicker.constructWidget($("input[type='filepicker']"));
					    </script>
	      	</div>
	      </div>
	      <div class="modal-footer">
	        <button type="submit" class="btn btn-default">Create Account</button>
	      </div>
      </form>
    </div>
  </div>
</div>