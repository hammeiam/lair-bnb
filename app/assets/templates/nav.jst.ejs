<ul>
  <li class="left-nav"><a href="/#/"><span class="logo"></span></a></li>
  <li class="left-nav">
  	<div class="lairbnb-form-group">
	  	<span class="glyphicon glyphicon-search input-icon"></span>
	  	<input type="text" class="location" name="location" id="location-search" placeholder="Where To? eg 'New York City'" value="<%= locationField %>">
  	</div>
  </li>
  
	<div class="right-nav-container">
		<% if(!!currentUser){ %>
			<li class="profile">
				<a href="#/users/<%= currentUser.id %>">
					<div class="circle">
						<img src="<%= currentUser.get(['profile_image_url']) %>" class="profile-img"/>
					</div>
					<span><%= currentUser.escape(['first_name']) %></span>
				</a>
			</li>
			<li>
				<a href="javascript:void(0)" id="signOut">Log Out</a>
			</li>
		<% } else { %>
			<li>
				<a href="#signUpModal" data-toggle="modal">Sign Up</a>
			</li>
			<li>
				<a href="#signInModal" data-toggle="modal">Sign In</a>
			</li>
		<% } %>
	</div>
</ul>

<!-- Modals -->
<div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
    <div id="alerts-container-modal"></div>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign In</h4>
      </div>
      <form id="signIn" role="form">
	      <div class="modal-body">
	       	<div class="form-group">
	       	  <label for='signInEmail'>Email</label>
					  <input id='signInEmail' class="form-control" type='text' name='session[email]' placeholder="Enter email">
				  </div>
				  
				  <div class="form-group">
					  <label for='signInpassword'>Password</label>
					  <input id='signInpassword' class="form-control" type='password' name='session[password]' placeholder="Password">
				  </div>
	       
	      </div>
	      <div class="modal-footer">
	        <button type="submit" class="btn btn-default">Sign In</button>
	      </div>
      </form>
    </div>
  </div>
</div>
		
