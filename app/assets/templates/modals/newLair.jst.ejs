<!-- Sign In -->
<div class="modal fade" 
	id="newLairModal" 
	tabindex="-1" 
	role="dialog" 
	aria-labelledby="myModalLabel" 
	aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
    <div id="new-lair-alerts-container-modal"></div>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
	        <span aria-hidden="true">&times;</span>
	        <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Create New Lair</h4>
      </div>
      <form id="create-new-lair" role="form">
	      <div class="modal-body">
	       	<div class="form-group">
	       	  <label for='title'>Title</label>
  					<input id='title' 
  					type='text' 
  					name='lair[title]'
  					placeholder='Title'>
				  </div>
				  
				  <div class="form-group">
	       	  <label for='description'>Description</label>
  					<input id='description' 
  					type='text' 
  					name='lair[description]'
  					placeholder='Description'>
				  </div>

				  <div class="form-group">
	       	  <label for='rate'>Rate</label>
  					<input id='rate' 
  					type='number' 
  					name='lair[rate]'
  					placeholder='Rate'>
				  </div>

				  <div class="form-group">
	       	 <label for='max_guests'>Maximum Number of Guests</label>
  					<input id='max_guests' 
  					type='number' 
  					name='lair[max_guests]'
  					placeholder='Maximum Number of Guests'>
				  </div>

				  <div class="form-group">
		       	<label for="lair_type">Lair Type</label>
	    			<input type="radio" name="lair[lair_type]" value="underground">Underground
	   				<input type="radio" name="lair[lair_type]" value="fortress">Fortress
	    			<input type="radio" name="lair[lair_type]" value="office">Office
				  </div>

				  <div class="form-group">
		        <label for="room_type">Room Type</label>
				    <input type="radio" name="lair[room_type]" value="entire-hq">Entire HQ
				    <input type="radio" name="lair[room_type]" value="private-room">Private
				    <input type="radio" name="lair[room_type]" value="shared-room">Shared
				  </div>

				  <div class="form-group">
		        <label for='street_address'>street_address</label>
  					<input id='street_address' type='text' name='lair[street_address]'>
					</div>
					<div class="form-group">
  					<label for='city'>city</label>
  					<input id='city' type='text' name='lair[city]'>
					</div>
					<div class="form-group">
  					<label for='state'>state</label>
					  <input id='state' type='text' name='lair[state]'>
				  </div>
				  <div class="form-group">
					  <label for='country'>country</label>
					  <input id='country' type='text' name='lair[country]'>
				  </div>

				  <div class="form-group">
				  	<label for='images'>Images</label>
					  <input type="filepicker" 
					    id="images"
					    name="lair[image_urls]"
					    data-fp-option-multiple="true">
				  </div>
	       
	      </div>
	      <div class="modal-footer">
	        <button type="submit" class="btn btn-default">
	        	Create Lair
	        </button>
	      </div>
      </form>
    </div>
  </div>
</div>