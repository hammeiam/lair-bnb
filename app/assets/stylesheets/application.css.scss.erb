 // "bootstrap-sprockets" must be imported before "bootstrap" and "bootstrap/variables"
@import "bootstrap-sprockets";
@import "bootstrap";
@import "slick";

html, body{
	margin: 0;
	padding: 0;
	height: 100%;
	width: 100%;
}

ul{
	margin: 0;
	padding: 0;
}

input, button, a {
  outline: none; 
}
input[type="checkbox"]:focus {
outline: none;
}

input[type="checkbox"], input[type="radio"] {
	box-sizing: border-box;
	border-radius: 3px;
	border: 1px solid lightgrey;
	height: 20px;
	width: 20px;
	padding: 0;
	-webkit-appearance: none;
}

input[type=text], select {
	border: 1px solid lightgrey;
	border-radius: 2px;
	height: 32px;
	padding: 0 5px;
}

#alerts-container{
	position: fixed;
	z-index: 100;
	width: 100%;
}
.alert{
	margin: 0;
}

.hasDatepicker{
	width: 100px;
}

.full-width-height{
	width: 100%;
	height: 100%;
	padding: 0;
}

#content-wrapper{
	@extend .full-width-height;
}

#main-content{
	@extend .full-width-height;
}

#map-element{
	@extend .full-width-height;
}

.lairbnb-nav{
	height: 45px;
	padding: 5px 20px;
	background: white;
	border-bottom: 1px solid lightgrey;
}
#nav-container{
	height: 45px;
	display: block;
	width: 100%;
}

#nav-container:after{
	clear:both;
}

.inner-wrapper{
	width: 100%;
	position: absolute;
	top: 45px;
	bottom: 0;
}

// nav //
nav ul{
margin: 0;
padding: 0;
list-style-type: none;
text-align: center;
}
nav ul li {
	display: inline;
}

nav ul li input {
	width: 250px;
}

.left-nav{
	float: left;
	margin-right: 20px;
}

.right-nav{
	float: right;
}

#location-search{
	padding-left: 30px;
}
.lairbnb-form-group{
	position: relative;
	float: left;
}
.input-icon{
	position:absolute;
	top: 30%;
	left: 10px;
}

.logo{
	width: 120px;
	height: 35px;
	display: block;
	background-image: url(<%= asset_path 'lairbnb-main-logo.png' %>);
	background-size: 100% auto;
}

/* SLIDESHOW */

.slider-container-mini{
	// width:100%;
	// height:200px;
	background-color:rgba(0,0,0,0.9);
	overflow: hidden;
	position: relative;

	img{
	  max-width: 100%;
		height: auto;
	}

	button{
		text-transform: none;
		background: none;
		outline-style: none;
		border: none;
	}
	.carousel-lr-button-container{
		color: white;
		position: absolute;
		z-index: 10;
		height: 100%;
	}

	.left-mini{
		@extend .carousel-lr-button-container;
		left:0;
		font-size: 25px;
		width: 25%;
		text-align: left;
	}

	.right-mini{
		@extend .carousel-lr-button-container;
		right:20px;
		font-size: 25px;
		width: 25%;
		text-align: right;
	}
	.slick-slider{
		margin:0;
	}

	// .slick-slider, .slick-track, .slick-list{
	// 	height: inherit;
	// }
	// .slick-slide{
	// 	position: relative;
	// }
}

.slider-container-main{
	width:100%;
	height:500px;
	background-color:rgba(0,0,0,0.9);
	overflow: hidden;

	img{
	  display: block;
	  width:100%;
	  max-width: 100%;
	  height: auto !important;
	  width: auto\9; /* ie8+9 */
	  position:absolute;
    top:0;
    bottom:0;
    margin: auto;
	}

	button{
		text-transform: none;
		background: none;
		outline-style: none;
		border: none;
	}
	.carousel-lr-button-container{
		color: white;
		position: absolute;
		text-shadow: 0 0 10px rgba(0,0,0,0.8);
		z-index: 10;
		height: 100%;
	}

	.left-main{
		@extend .carousel-lr-button-container;
		left:0;
		font-size: 75px;
		width: 75px;
	}

	.left-mini{
		left:0;
		font-size: 75px;
		width: 25%;
	}

	.right-main{
		@extend .carousel-lr-button-container;
		right:20px;
		font-size: 75px;
		width: 75px;
	}

	.right-mini{
		right:20px;
		font-size: 75px;
		width: 25%;
	}

	.slick-slider, .slick-track, .slick-list{
		height: inherit;
	}
	.slick-slide{
		position: relative;
	}
}

#slider{
	margin: 0 20px 15px 20px;
}

// profile image //

.circle{
  height: 100px;
  width: 100px;
  border-radius: 50px;
	-webkit-border-radius: 50px;
	-moz-border-radius: 50px;
	border: 3px solid white;
  overflow: hidden;
}

.profile-img{
	width:100%;
}

// Lair Reservation Form //

.page-container{
	width: 1100px;
	min-width: 1000px;
	margin-left: auto;
	margin-right: auto;
	padding-left: 25px;
	padding-right: 25px;
}
.lair-reservation{
	width: 100%;
	height: 500px;
	margin: -40px 0 0 0;
	.price-bar{
		height: 40px;
		color: white;
		background: rgba(60,60,60,0.8);
		padding: 10px 25px;
	}
	.date-input{
		width: 85px;
		margin-right: 10px;
	}

	.col-xs-12{
		margin: 0 0 20px 0;
	}
}

.btn{
	color: white;
	background: #c0392b;
	padding: 5px 20%;
	width: 100%;
	height: 45px;
}

// General Lair Page //
.lair-details-header{
	height: 160px;
	border-bottom: 1px solid lightgrey;
}
.lair-body-content{
	background: #f5f5f5;

}

// Lair Results Page //


// search //

#map-container{
	height: 100%;
	width: 45%;
	padding: 0;
	float: left;
	display: inline-block;
}


#sidebar-container{
	padding:30px;
	height: 100%;
	width: 55%;
	overflow-y: scroll;
	float: left;
	display: inline-block;
	border-left: 1px solid lightgrey;
}

.lair-result{
	list-style: none;
	// width: 50%;
	display: inline-block;
}


// search filters //
.filter{
	padding: 20px;
}

.filter-icon{
	min-height: 100px;
	min-width: 100px;
	float: left;
	background-size: 85% auto;
	background-position: center;
	background-repeat: no-repeat;
}

.noUi-horizontal {
	height: 8px;
}

.noUi-connect{
	background: #c0392b;
}

input[type="checkbox"].filter-icon{
	border: none;
}
input[type="checkbox"]:checked.filter-icon {
	border: 3px solid #c0392b;
}

.filter-icon:hover{
	cursor: pointer;
}

.filter-input-item{
	width: 100%;
}

.noUi-handle .noUi-handle-lower{
	top: -12px;
}

#fortress{
	background-image: url(<%= asset_path 'fortress-icon.png' %>);
	// icon courtesy of the noun project
}
#office{
	background-image: url(<%= asset_path 'office-icon.png' %>);
	// icon courtesy of the noun project
}

#underground{
	background-image: url(<%= asset_path 'underground-icon.png' %>);
	// icon courtesy of the noun project
}
.dollar-value:before{
	content: "$";
}
#max-price{
	float:right;
}

#lairs-index{
	border-top: 1px solid lightgrey;
	padding-top: 20px;
}
.input-container{
	width: 100%;
	float: left;
	clear: both;
}

.result-price{
	background: rgba(60,60,60,0.8);
	height: 40px;
	width: 70px;
	z-index: 2;
	position: absolute;
	color: white;
	bottom: 20px;
	left: 0px;
	font-size: 18px;
	padding: 10px 10px 10px 30px;
}
.result-profile-image{
	float: right;
	height: 60px;
	width: 60px;
	border-radius: 50px;
	-webkit-border-radius: 50px;
	-moz-border-radius: 50px;
	position: absolute;
	right: 10px;
	top: -30px;
}

.result-text{
	position: relative;
}

button.pagination {
	color: white;
	background: #c0392b;
	padding: 5px 20%;
	width: 100%;
	height: 45px;

}

// HOME PAGE //
.hero-wrapper{
	height: 550px;
	min-width: 1050px;
	position: relative;
}

.video-wrapper{
	height: 550px;
	overflow-y: hidden;
	position: absolute;
	top: 0;
	width: 100%;
	z-index: -100;
}

video{
	position: absolute;
	bottom: 0;
	width: 100%;
	overflow: hidden;
	min-width: 1050px;
}
.main-overlay{
	width: 800px;
	margin: 0 auto;
	height: 445px;
	color: white;
	font-size: 3em;
	text-align: center;
}
.main-form-wrapper{
	width: 100%;
	height: 105px;
	padding: 30px;
	float: left;
	position: relative;
	background: rgba(0,0,0, 0.6);
}

.main-form-collection{
	position: relative; 
  float: left;
  margin: 0 18%;
	min-width: 800px;
}

.main-form-collection > input{
	position: relative; 
  float: left;
	height: 50px;
	width: 120px;
	border-radius: 0;
	// border-left: 2px solid lightgrey;
}

input#location-search.first{
	float: left;
	height: 50px;
	width: 250px;
	-webkit-border-top-left-radius: 2px;
	-webkit-border-bottom-left-radius: 2px;
	-moz-border-radius-topleft: 2px;
	-moz-border-radius-bottomleft: 2px;
	border-top-left-radius: 2px;
	border-bottom-left-radius: 2px;
	-webkit-border-top-right-radius: 0;
	-webkit-border-bottom-right-radius: 0;
	-moz-border-radius-topright: 0;
	-moz-border-radius-bottomright: 0;
	border-top-right-radius: 0;
	border-bottom-right-radius: 0;
}

button.last  {
	float: left;
	height: 50px;
	padding: 0;
	width: 150px;
}
button.last{
	-webkit-border-top-right-radius: 2px;
	-webkit-border-bottom-right-radius: 2px;
	-moz-border-radius-topright: 2px;
	-moz-border-radius-bottomright: 2px;
	border-top-right-radius: 2px;
	border-bottom-right-radius: 2px;
	-webkit-border-top-left-radius: 0;
	-webkit-border-bottom-left-radius: 0;
	-moz-border-radius-topleft: 0;
	-moz-border-radius-bottomleft: 0;
	border-top-left-radius: 0;
	border-bottom-left-radius: 0;
}

// USER PAGE //
.user-show-wrapper{
	.lair-result{
		border: 1px solid lightgrey;
		border-radius: 5px;
		padding: 15px;
		margin: 10px;
	}
}

.center{
	width: 150px;
	text-align: center;
	margin: 0 auto;
}

