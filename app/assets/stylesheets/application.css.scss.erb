}

.full-width-height{
	width: 100%;
	height: 100%;
	padding: 0;
}

.center{
	margin: 0 auto;
}

.t-center{
	text-align: center;
}

.v-center{
	position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
