/* SLIDESHOW */
@-webkit-keyframes playSmall {
  from { background-position: 0 0; }
  to { background-position: -1888px 0; }
}

@-moz-keyframes playSmall {
  from { background-position: 0 0; }
  to { background-position: -1888px 0; }
}

@keyframes playSmall {
  from { background-position: 0 0; }
  to { background-position: -1888px 0; }
}
