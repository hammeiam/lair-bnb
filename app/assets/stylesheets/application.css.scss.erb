	background-size: 32px;
	background-repeat: no-repeat;
	background-position: center;
}

.trip-subsection{
	border-bottom: 1px solid lightgrey;
	text-align: center;
	padding: 5px 0;
	display: inline-block;
	width: 100%;
}

.trip-subsection img, .trip-subsection-last img{
	width: 100%;
}

.trip-subsection-last{
	text-align: center;
	padding-top: 10px;
	display: inline-block;
	width: 100%;
}
.trips-carousel-lr-button-container{
	color: white;
	position: absolute;
	text-shadow: 0 0 10px rgba(0,0,0,0.8);
	z-index: 10;
	height: 100%;
	background: rgba(0,0,0,0);
	border: none;
	font-size: 60px;
	width: 75px;
	opacity: 0.6;
	transition: opacity 0.5s, background 0.5s;
	-webkit-transition:opacity 0.5s, background 0.5s; /* For Safari 3.1 to 6.0 */
	border-radius: 5px;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
}

.left-trip-arrow{
	@extend .trips-carousel-lr-button-container;
	left:0;
}
.right-trip-arrow{
	@extend .trips-carousel-lr-button-container;
	right:0;
}

.left-trip-arrow:hover, .right-trip-arrow:hover{
	opacity: 1;
	background: rgba(0, 0, 0, 0.2);
}

.trip_status{
	text-transform: capitalize;
}

.pending{
	@extend .trip_status;
	background-color: rgba(243, 156, 18, 0.2);
}

.denied{
	@extend .trip_status;
	background-color: rgba(192, 57, 43, 0.2);
}

.approved{
	@extend .trip_status;
	background-color: rgba(39, 174, 96, 0.2);
}
