 // "bootstrap-sprockets" must be imported before "bootstrap" and "bootstrap/variables"
@import "bootstrap-sprockets";
@import "bootstrap";
@import "slick";

html, body{
	margin: 0;
	padding: 0;
	height: 100%;
	width: 100%;
}

input, button, a {
  outline: none; 
}
input[type="checkbox"]:focus {
outline: none;
}

input[type="checkbox"], input[type="radio"] {
	box-sizing: border-box;
	border-radius: 3px;
	border: 1px solid lightgrey;
	height: 20px;
	width: 20px;
	padding: 0;
	-webkit-appearance: none;
}

input[type=text], select {
	border: 1px solid lightgrey;
	border-radius: 2px;
	height: 32px;
	padding: 0 10px;
}

.hasDatepicker{
	width: 100px;
}

.full-width-height{
	width: 100%;
	height: 100%;
	padding: 0;
}

#content-wrapper{
	@extend .full-width-height;
}

#main-content{
	@extend .full-width-height;
}

#map-element{
	@extend .full-width-height;
}

.lairbnb-nav{
	height: 45px;
	padding: 5px 20px;
	background: white;
	border-bottom: 1px solid lightgrey;
}
#nav-container{
	position: absolute;
	min-height: 45px;
	display: block;
	width: 100%;
}

#nav-container:after{
	clear:both;
}

.inner-wrapper{
	width: 100%;
	position: absolute;
	top: 45px;
	bottom: 0;
}

// nav //
nav ul{
margin: 0;
padding: 0;
list-style-type: none;
text-align: center;
}
nav ul li {
	display: inline;
}

nav ul li input {
	width: 250px;
}

.left-nav{
	float: left;
	margin-right: 20px;
}

.right-nav{
	float: right;
}

#location-search{
	padding-left: 30px;
}
.lairbnb-form-group{
	position: relative;
}
.input-icon{
	position:absolute;
	top: 10px;
	left: 10px;
}

.logo{
	width: 120px;
	height: 35px;
	display: block;
	background-image: url(<%= asset_path 'lairbnb-main-logo.png' %>);
	background-size: 100% auto;
}

// SLIDESHOW //

.slick-prev:before{

}

.slider-container-main{
	width:100%;
	height:500px;
	background-color:rgba(0,0,0,0.9);
	overflow: hidden;

	img{
	  display: block;
	  width:100%;
	  max-width: 100%;
	  height: auto !important;
	  width: auto\9; /* ie8+9 */
	  position:absolute;
    top:0;
    bottom:0;
    margin: auto;
	}

	button{
		text-transform: none;
		background: none;
		outline-style: none;
		border: none;
	}
	.carousel-lr-button-container{
		color: white;
		position: absolute;
		text-shadow: 0 0 10px rgba(0,0,0,0.8);
		z-index: 10;
		height: 100%;
	}

	.left-main{
		@extend .carousel-lr-button-container;
		left:0;
		font-size: 75px;
		width: 75px;
	}

	.left-mini{
		left:0;
		font-size: 75px;
		width: 25%;
	}

	.right-main{
		@extend .carousel-lr-button-container;
		right:20px;
		font-size: 75px;
		width: 75px;
	}

	.right-mini{
		right:20px;
		font-size: 75px;
		width: 25%;
	}

	.slick-slider, .slick-track, .slick-list{
		height: inherit;
	}
	.slick-slide{
		position: relative;
	}
}

#slider{
	margin: 0 20px 15px 20px;
}

// profile image //

.circle{
  height: 100px;
  width: 100px;
  border-radius: 50px;
	-webkit-border-radius: 50px;
	-moz-border-radius: 50px;
	border: 3px solid lightgrey;
  overflow: hidden;
}

.profile-img{
	width:100%;
}

// Lair Reservation Form //

.page-container{
	width: 1050px;
	margin-left: auto;
	margin-right: auto;
	padding-left: 25px;
	padding-right: 25px;
}
.lair-reservation{
	width: 315px;
	height: 500px;
	margin: -40px;
	padding: 0 20px;
	.price-bar{
		height: 40px;
		color: white;
		background: rgba(0,0,0,0.8);
	}
	.date-input{
		width: 85px;
		margin-right: 10px;
	}
}

// Lair Results Page //


// search //

#map-container{
	height: 100%;
	width: 45%;
	padding: 0;
	float: left;
	display: inline-block;
}


#sidebar-container{
	padding:30px;
	height: 100%;
	width: 55%;
	overflow-y: scroll;
	float: left;
	display: inline-block;
	-webkit-box-shadow: -5px 1px 5px 0px rgba(0,0,0,0.75);
	-moz-box-shadow: -5px 1px 5px 0px rgba(0,0,0,0.75);
	box-shadow: -5px 1px 5px 0px rgba(0,0,0,0.75);
}



.lair-result{
	list-style: none;
	width: 50%;
	min-width: 200px;
	float: left;
}


// search filters //
.filter{
	padding: 20px;
}

.filter-icon{
	min-height: 100px;
	min-width: 100px;
	float: left;
	background-size: 85% auto;
	background-position: center;
	background-repeat: no-repeat;
}

input[type="checkbox"].filter-icon{
	border: none;
}
input[type="checkbox"]:checked.filter-icon {
	border: 3px solid #c0392b;
}

.filter-icon:hover{
	cursor: pointer;
}

.filter-input-item{
	width: 100%;
}

#fortress{
	background-image: url(<%= asset_path 'fortress-icon.png' %>);
}
#office{
	background-image: url(<%= asset_path 'office-icon.png' %>);
}

#underground{
	background-image: url(<%= asset_path 'underground-icon.png' %>);
}
.dollar-value:before{
	content: "$";
}
#max-price{
	float:right;
}
.input-container{
	width: 100%;
	float: left;
	clear: both;
}




