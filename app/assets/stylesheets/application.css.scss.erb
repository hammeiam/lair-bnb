}

button.green:focus{
	color: white;
	background: darken(#27ae60, 5%)
}

#alerts-container{
	position: fixed;
	z-index: 100;
	width: 100%;
}
.alert{
	margin: 0;
}

.tooltip-inner{
	padding: 15px;
